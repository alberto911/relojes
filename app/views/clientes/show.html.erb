<div class="row">
	<p></p>
	<div class="col-lg-4">
		<div class="well well-lg">
		<h4>  <%= @cliente.nombre %></h4>
			<p>
			  <strong>Teléfono:</strong>
			  <%= @cliente.telefono %>
			</p>

			<p>
			  <strong>Dirección fiscal:</strong>
			  <%= @cliente.direccion_fiscal %>
			</p>

			<p>
			  <strong>RFC:</strong>
			  <%= @cliente.rfc %>
			</p>

			<%= link_to 'Ver tiendas', cliente_tiendas_clientes_path(@cliente), class: "btn btn-default" %>
			
		</div>
	</div>
</div>
<% if current_user.is_admin %>
<%= link_to 'Editar', edit_cliente_path(@cliente), class: "btn btn-default" %>
<% end %>
<%= link_to 'Regresar', clientes_path, class: "btn btn-default" %>
