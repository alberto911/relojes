<h2 class="page-header">Clientes</h2>

<div class="dataTable_wrapper">
	<table id="dataTable" class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">
		<thead>
		  <tr>
		    <th>Nombre</th>
		    <th>Telefono</th>
		    <th>Direccion fiscal</th>
		    <th>Rfc</th>
		    <th>Show</th>
				<th>Edit</th>
				<th>Destroy</th>
		  </tr>
		</thead>

		<tbody>
		  <% @clientes.each do |cliente| %>
		    <tr>
		      <td><%= cliente.nombre %></td>
		      <td><%= cliente.telefono %></td>
		      <td><%= cliente.direccion_fiscal %></td>
		      <td><%= cliente.rfc %></td>
		      <td><%= link_to 'Show', cliente %></td>
		      <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
		      <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		    </tr>
		  <% end %>
		</tbody>
	</table>
</div>
