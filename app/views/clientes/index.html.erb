<h2 class="page-header">Clientes</h2>

<div class="dataTable_wrapper">
	<table id="dataTable" class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">
		<thead>
		  <tr>
		    <th>Nombre</th>
		    <th>Teléfono</th>
		    <th>Dirección fiscal</th>
		    <th>RFC</th>
		    <th></th>
				
		  </tr>
		</thead>

		<tbody>
		  <% @clientes.each do |cliente| %>
		    <tr>
		      <td><%= cliente.nombre %></td>
		      <td><%= cliente.telefono %></td>
		      <td><%= cliente.direccion_fiscal %></td>
		      <td><%= cliente.rfc %></td>
		      <td><%= link_to "<span class=\"glyphicon glyphicon-info-sign\"></span>".html_safe, cliente %>
		      <%= link_to "<span class=\"glyphicon glyphicon-pencil\"></span>".html_safe, edit_cliente_path(cliente) %>
		      <%= link_to "<span class=\"glyphicon glyphicon-remove\"></span>".html_safe, cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		    </tr>
		  <% end %>
		</tbody>
	</table>
</div>
<%= link_to 'Nuevo Cliente', new_cliente_path, class: "btn btn-default" %>
