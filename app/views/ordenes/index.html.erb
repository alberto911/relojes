<div class="dataTable_wrapper">
	<table id="dataTable" class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">
  		<thead>
			<tr>
			  <th>Cliente</th>
			  <th>Tienda</th>
			  <th>Fecha pedido</th>
			  <th>Fecha entrega</th>
			  <th>Total</th>		
			  <th></th>
			</tr>
  		</thead>

  		<tbody>
    		<% @ordenes.each do |orden| %>
      			<tr>
					<td><%= orden.tienda_cliente.cliente.nombre %></td>
					<td><%= orden.tienda_cliente.nombre %></td>
					<td><%= orden.fecha_pedido %></td>
					<td>
						<% if orden.entregada? %>
							<%= orden.fecha_entrega %>
						<% elsif orden.fecha_pedido && current_user.is_admin %>
							<%= link_to 'Asignar repartidor', asignar_repartidor_path(orden), class: "btn btn-success btn-sm" %>
						<% end %>
					</td>
					<td><%= orden.total %></td>
					<td><%= link_to "<span class=\"glyphicon glyphicon-info-sign\"></span>".html_safe, orden %>
					<% unless orden.fecha_pedido %>
					<%= link_to "<span class=\"glyphicon glyphicon-pencil\"></span>".html_safe, edit_orden_path(orden) %>
					<%= link_to "<span class=\"glyphicon glyphicon-remove\"></span>".html_safe, orden, method: :delete, data: { confirm: 'Are you sure?' } %>
					<% end %>
					</td>
      			</tr>
			<% end %>
		</tbody>
	</table>
</div>

<%= link_to 'Nueva orden', new_orden_path, class: "btn btn-default" %>
