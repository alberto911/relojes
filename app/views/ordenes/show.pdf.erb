<div class="row">
	<p></p>
	<div class="col-lg-4">
		<div class="well well-lg">
		<h4><%= @orden.tienda_cliente.cliente.nombre %></h4>
		
			<p>
				<strong>Tienda:</strong>
				<%= @orden.tienda_cliente.nombre %>
			</p>

			<% if @orden.tiene_repartidor? %>
				<p>
					<strong>Repartidor:</strong>
					<%= @orden.repartidor.nombre %>
				</p>
			<% end %>

			<% if @orden.fecha_pedido %>
			<p>
				<strong>Fecha pedido:</strong>
				<%= @orden.fecha_pedido.strftime("%d-%m-%Y %H:%M") %>
			</p>
			<% end %>

			<% if @orden.entregada? %>
			<p>
				<strong>Fecha entrega:</strong>
				<%= @orden.fecha_entrega.strftime("%d-%m-%Y %H:%M") %>
			</p>
			<% end %>

			<p>
				<strong>Total:</strong>
				<div id="total"><%= number_to_currency(@orden.total) %></div>
			</p>
		</div>
	</div>
</div>

<div class="row">
	<h3>Productos</h3>
	<div class="dataTable_wrapper">
		<table class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">
			<thead>
				<tr>
					<th>Proveedor</th>
					<th>Modelo</th>
					<th>Cantidad</th>
					<th>Subtotal</th>
				</tr>
			</thead>
			<tbody id="cantidades">
				<% @ordenes_cantidades.each do |orden_cantidad| %>
					<tr>
						<td><%= orden_cantidad.reloj.proveedor.nombre %></td>
						<td><%= orden_cantidad.reloj.modelo %></td>
						<td><%= orden_cantidad.cantidad %></td>
						<td><%= number_to_currency(orden_cantidad.subtotal) %></td>
					</tr>
				<% end %>
			</tbody>
		<table>
	</div>
</div>
