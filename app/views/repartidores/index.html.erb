<h1>Listing Repartidores</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Rfc</th>
      <th>Telefono</th>
      <th>Direccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repartidores.each do |repartidor| %>
      <tr>
        <td><%= repartidor.nombre %></td>
        <td><%= repartidor.rfc %></td>
        <td><%= repartidor.telefono %></td>
        <td><%= repartidor.direccion %></td>
        <td><%= link_to 'Show', repartidor %></td>
        <td><%= link_to 'Edit', edit_repartidor_path(repartidor) %></td>
        <td><%= link_to 'Destroy', repartidor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Repartidor', new_repartidor_path %>
