<%= form_for(@repartidor) do |f| %>
  <% if @repartidor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@repartidor.errors.count, "error") %> prohibited this repartidor from being saved:</h2>

      <ul>
      <% @repartidor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="col-lg-6">
		<div class="form-group">
		  <%= f.label :email %><br>
		  <%= email_field :user, :email, value: (@repartidor.new_record? ? (params[:user][:email] if params[:user]) : @repartidor.user.email), class: "form-control" %>
		</div>
		<div class="form-group">
		  <%= f.label :password %>
			<% if params[:action] == 'edit' %>
				<i>(leave blank if you don't want to change it)</i>
			<% end %>
			<br>
		  <%= password_field :user, :password, autocomplete: "off", class: "form-control" %>
		</div>
		<div class="form-group">
		  <%= f.label :nombre %><br>
		  <%= f.text_field :nombre, class: "form-control" %>
		</div>
		<div class="form-group">
		  <label>RFC</label><br>
		  <%= f.text_field :rfc, class: "form-control" %>
		</div>
		<div class="form-group">
		  <%= f.label :teléfono %><br>
		  <%= f.text_field :telefono, class: "form-control" %>
		</div>
		<div class="form-group">
    	<%= f.label :dirección %><br>
    	<%= f.text_field :direccion, class: "form-control" %>
  	</div>
		<div class="actions">
		  <%= link_to 'Cancelar', repartidores_path,  class: "btn btn-default" %>
		  <%= f.submit 'Enviar', class: "btn btn-default" %>
		</div>
  </div>
<% end %>
