<h2 class="page-header">Relojes</h2>

<div class = row>
	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Relojes por proveedor
			</div>                       
			<div class="panel-body">
			<%= pie_chart Reloj.por_marca %>
			</div>
		</div>
	</div>

	<div class="col-lg-6"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Promedio de precio por proveedor
			</div>                       
			<div class="panel-body">
			<%= column_chart Reloj.precios %>
			</div>
		</div>
	</div>

	<div class="col-lg-6"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Stock por proveedor
			</div>                       
			<div class="panel-body">
			<%= column_chart Reloj.stock_proveedor %>
			</div>
		</div>
	</div>

	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Relojes por rango de precio
			</div>                       
			<div class="panel-body">
			<%= pie_chart(Reloj.rangos_precio)%>
			</div>
		</div>
	</div>
</div>


<div class="dataTable_wrapper">
	<table id="dataTable" class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">
	  	<thead>
		    <tr>
				<th>Proveedor</th>
		   	   	<th>LÃ­nea</th>
      			<th>Modelo</th>
      			<th>Precio</th>
				<th>Stock</th>
      			<th></th>
    		</tr>
  		</thead>

  		<tbody>
    		<% @relojes.each do |reloj| %>
      			<tr>
        			<td><%= reloj.proveedor.nombre %></td>
					<td><%= reloj.marca %></td>
        			<td><%= reloj.modelo %></td>
        			<td><%= reloj.precio %></td>
					<td><%= reloj.stock %></td>
        			<td><%= link_to "<span class=\"glyphicon glyphicon-info-sign\"></span>".html_safe, reloj %>
       				<%= link_to "<span class=\"glyphicon glyphicon-pencil\"></span>".html_safe, edit_reloj_path(reloj) %>
       				<%= link_to "<span class=\"glyphicon glyphicon-remove\"></span>".html_safe, reloj, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     			</tr>
    		<% end %>
  		</tbody>
	</table>
</div>
<%= link_to 'Nuevo Reloj', new_reloj_path, class: "btn btn-default" %>
