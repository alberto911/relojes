<h2 class="page-header">Estadísticas de relojes</h2>

<div class = row>
	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Ventas por día 
			</div>                       
			<div class="panel-body">
			<%= area_chart(Reloj.ventas_dia) %>
			</div>
		</div>
	</div>
</div>

<div class = row>
	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Ventas por proveedor 
			</div>                       
			<div class="panel-body">
			<%= column_chart(Reloj.ventas_proveedor) %>
			</div>
		</div>
	</div>
</div>

<div class = row>
	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Compras por día 
			</div>                       
			<div class="panel-body">
			<%= area_chart(Reloj.compras_dia) %>
			</div>
		</div>
	</div>
</div>

<div class = row>
	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Compras por proveedor 
			</div>                       
			<div class="panel-body">
			<%= column_chart(Reloj.compras_proveedor) %>
			</div>
		</div>
	</div>
</div>

<div class = row>
	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Relojes por proveedor
			</div>                       
			<div class="panel-body">
			<%= pie_chart Reloj.por_marca %>
			</div>
		</div>
	</div>

	<div class="col-lg-6"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Promedio de precio por proveedor
			</div>                       
			<div class="panel-body">
			<%= column_chart Reloj.precios %>
			</div>
		</div>
	</div>

	<div class="col-lg-6"> 
		<div class="panel panel-default">
			<div class="panel-heading">
