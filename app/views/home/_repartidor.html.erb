<div class="row">
	<div class="col-lg-4">
		<div class="panel panel-primary">	
        	<div class="panel-heading">
            	<%=current_user.repartidor.nombre %>
            </div>
            <div class="panel-body">
         		<p>
			  		<strong>Número de repartos asignados:</strong>
			  		<%= @asignados %>
				</p>
				<p>
			  		<strong>Número de repartos completados:</strong>
			  		<%= @completados %>
				</p>
            </div>
    	</div>
	</div>
</div>

<div class = row>
	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Mis entregas en los últimos 30 días
			</div>                       
			<div class="panel-body">
			<%= column_chart @repartos_dia %>
			</div>
		</div>
	</div>
	
	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Mis entregas en el último año
			</div>                       
			<div class="panel-body">
			<%= column_chart @repartos_mes %>
			</div>
		</div>
	</div>

	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Mis entregas por cliente
			</div>                       
			<div class="panel-body">
			<%= pie_chart @repartos_cliente %>
			</div>
		</div>
	</div>
</div>
