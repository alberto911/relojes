<div class="row">
	<div class="col-lg-4">
		<% if @total_pedidos > @total_ordenes %>
    	<div class="panel panel-red">
		<% else %>
		<div class="panel panel-green">	
		<% end %>
        	<div class="panel-heading">
            	Resumen
            </div>
            <div class="panel-body">
         		<p>
			  		<strong>Ventas totales:</strong>
			  		<%= number_to_currency(@total_ordenes) %>
				</p>

				<p>
			  		<strong> Compras totales:</strong>
			  		<%= number_to_currency(@total_pedidos) %>
				</p>
            </div>
            <div class="panel-footer">
            	<p>
			  		<strong>Utilidad:</strong>
			 		<%= number_to_currency(@total_ordenes - @total_pedidos) %>
				</p>
        	</div>
    	</div>
	</div>
</div>



<div class = row>
	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Utilidades diarias en los últimos 30 días
			</div>                       
			<div class="panel-body">
			<%= area_chart @utilidades_dia %>
			</div>
		</div>
	</div>

	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Utilidades mensuales en el último año 
			</div>                       
			<div class="panel-body">
			<%= area_chart @utilidades_mes %>
			</div>
		</div>
	</div>
</div>
