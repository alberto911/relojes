<div class="row">
	<p></p>
	<div class="col-lg-4">
		<div class="well well-lg">
		<h4>  <%= @vendedor.nombre %></h4>
			<p>
			  <strong>Teléfono:</strong>
			  <%= @vendedor.telefono %>
			</p>

			<p>
			  <strong>RFC:</strong>
			  <%= @vendedor.rfc %>
			</p>
		</div>
	</div>
</div>
<div class= row>
	<div class="col-lg-12"> 
			<%= link_to 'Editar', edit_vendedor_path(@vendedor), class: "btn btn-default " %>
			<%= link_to 'Regresar', vendedores_path, class: "btn btn-default " %>
	</div>
</div>

<div class = row>
	<p></p>
	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Ventas en los últimos 30 días
			</div>                       
			<div class="panel-body">
			<%= area_chart Orden.ventas_dia_vendedor (@vendedor.id) %>
			</div>
		</div>
	</div>
	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Ventas en el último año 
			</div>                       
			<div class="panel-body">
			<%= area_chart Orden.ventas_mes_vendedor (@vendedor.id) %>
			</div>
		</div>
	</div>

	<div class="col-lg-12"> 
		<div class="panel panel-default">
			<div class="panel-heading">
				Ventas por cliente
			</div>                       
			<div class="panel-body">
			<%= pie_chart Orden.ventas_cliente_vendedor (@vendedor.id) %>
			</div>
		</div>
	</div>
</div>

