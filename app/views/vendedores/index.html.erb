<h2 class="page-header">Vendedores</h2>
<div class="dataTable_wrapper">
	<table id="dataTable" class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">
  		<thead>
    		<tr>
      			<th>Nombre</th>
      			<th>Teléfono</th>
      			<th>RFC</th>
      			<th></th>
    		</tr>
  		</thead>

  		<tbody>
    		<% @vendedores.each do |vendedor| %>
      			<tr>
        			<td><%= vendedor.nombre %></td>
        			<td><%= vendedor.telefono %></td>
        			<td><%= vendedor.rfc %></td>
        			<td><%= link_to "<span class=\"glyphicon glyphicon-info-sign\"></span>".html_safe, vendedor %>
        			<%= link_to "<span class=\"glyphicon glyphicon-pencil\"></span>".html_safe, edit_vendedor_path(vendedor) %>
        			<%= link_to "<span class=\"glyphicon glyphicon-remove\"></span>".html_safe, vendedor, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      			</tr>
    		<% end %>
  		</tbody>
	</table>
</div>
<%= link_to 'Nuevo Vendedor', new_vendedor_path, class: "btn btn-default" %>
