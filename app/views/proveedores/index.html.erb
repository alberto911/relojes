<h2 class="page-header">Proveedores</h2>
<div class="dataTable_wrapper">
	<table id="dataTable" class="table table-striped table-bordered table-hover" width="100%" cellspacing="0">
		<thead>
		  <tr>
		    <th>Nombre</th>
		    <th>Teléfono</th>
		    <th>Dirección</th>
		    <th>RFC</th>
		    <th></th>
			
		  </tr>
		</thead>

		<tbody>
		  <% @proveedores.each do |proveedor| %>
		    <tr>
		      <td><%= proveedor.nombre %></td>
		      <td><%= proveedor.telefono %></td>
		      <td><%= proveedor.direccion %></td>
		      <td><%= proveedor.rfc %></td>
		      <td><%= link_to "<span class=\"glyphicon glyphicon-info-sign\"></span>".html_safe, proveedor %>
		      <%= link_to "<span class=\"glyphicon glyphicon-pencil\"></span>".html_safe, edit_proveedor_path(proveedor) %>
		      <%= link_to "<span class=\"glyphicon glyphicon-remove\"></span>".html_safe, proveedor, method: :delete, data: { confirm: '¿Estás seguro?' } %> </td>
		    </tr>
		  <% end %>
		</tbody>
	</table>
</div>

<%= link_to 'Nuevo Proveedor', new_proveedor_path, class: "btn btn-default" %>
<%= link_to 'Exportar a CSV', proveedores_path(format: :csv), class: "btn btn-default" %>
