<%= form_for(@proveedor) do |f| %>
  <% if @proveedor.errors.any? %>
    <div id="error_explanation">
      <h4>Hay <%= pluralize(@proveedor.errors.count, "error") %>:</h4>

      <ul>
      <% @proveedor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div class="col-lg-6">
		<div class="form-group">
		  <%= f.label :nombre %><br>
		  <%= f.text_field :nombre, class: "form-control" %>
		</div>
		<div class="form-group">
		  <label>RFC</label><br>
		  <%= f.text_field :rfc, class: "form-control" %>
		</div>
		<div class="form-group">
		  <%= f.label :teléfono %><br>
		  <%= f.text_field :telefono, class: "form-control" %>
		</div>
		<div class="form-group">
		  <%= f.label :dirección %><br>
		  <%= f.text_field :direccion, class: "form-control" %>
		</div>
		<div class="actions">
		  <%= link_to 'Cancelar', proveedores_path,  class: "btn btn-default" %>		
		  <%= f.submit 'Enviar', class: "btn btn-default" %>
		</div>
	</div>
<% end %>
